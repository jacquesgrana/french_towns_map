    <div class="modal fade" id="modal-comment" tabindex="-1" aria-labelledby="title-modal-comment" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="GET" id="comment-form">
                    <div class="modal-header">
                        <h5 class="modal-title" id="title-modal-comment">Nouveau commentaire</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        
                            <div class="mb-3">
                                <label for="comment-title" class="form-label">Titre</label>
                                <input type="text" class="form-control" id="comment-title" name="_title" maxlength="30" placeholder="Saisir un titre." required>
                            </div>
                            <div class="mb-3">
                                <label for="comment-comment" class="form-label">Commentaire</label>
                                <textarea class="form-control" id="comment-comment" name="_comment" rows="4" maxlength="400" placeholder="Saisir un commentaire." required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="comment-score" class="form-label">Score</label>
                                <input type="range" class="form-range" id="comment-score" name="_score" min="0" max="5" step="0.1" oninput="this.nextElementSibling.value = this.value">
                                <output id="comment-score-output">2.5</output>
                            </div>
                            <input type="hidden" name="_town_id" id="comment-town-id" value="0">
                            <input type="hidden" name="_comment_id" id="comment-id" value="0">

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('comment-form') }}">
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Sauvegarder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>