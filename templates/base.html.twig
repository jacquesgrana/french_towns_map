<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('image/favicon.ico') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('app.css') }}">
         <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
     integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
     crossorigin=""/>
        {% block stylesheets %}
        
        {% endblock %}
        

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
     integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
     crossorigin=""></script>
        {% block js %}
        {% endblock %}
    </head>
    <body>
        <header>
            <h1 class="">Carte des Communes</h1>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <p class="text-primary-dark">Vous êtes connecté comme : 
                <span class="text-orange">{{ app.user.userIdentifier }}</span> • pseudo : 
                <span class="text-orange">{{ app.user.pseudo }}</span> • 
                <span><a class="link-01 text-orange" href="{{ path('app_logout') }}"><span>Déconnexion</span></a></span>
                </p>
            {% else %}
                <p class="text-primary-dark">Vous n'êtes pas connecté • 
                <span><a href="{{ path('app_login') }}" class="link-01 text-orange"><span>Connexion</span></a></span>
                </p>
            {% endif %}
        </header>
        {% block body %}
        
        {% endblock %}
        <footer>
            <p>Texte du footer</p>
        </footer>
    </body>
</html>
