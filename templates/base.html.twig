<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('app.css') }}">
        {% block stylesheets %}
        
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <header>
            <h1 class="">Carte des Communes</h1>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <p class="text-primary-dark">Vous êtes connecté comme : 
                <span class="text-orange">{{ app.user.userIdentifier }}</span> • pseudo : 
                <span class="text-orange">{{ app.user.pseudo }}</span> • 
                <span><a class="link-01" href="{{ path('app_logout') }}"><span  class="text-orange link-01">Déconnexion</span></a></span>
                </p>
            {% else %}
                <p class="text-primary-dark">Vous n'êtes pas connecté • 
                <span><a href="{{ path('app_login') }}" class="link-01"><span class="text-orange link-01">Connexion</span></a></span>
                </p>
            {% endif %}
        </header>
        {% block body %}
        
        {% endblock %}
        <footer>
            <p>Texte du footer</p>
        </footer>
    </body>
</html>
